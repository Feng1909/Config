{
    /* Sync settings */
    "settingsSync.ignoredSettings": [
        "editor.fontFamily", // Font type, in case of different font types on different devices
        "editor.fontSize", // Font size, different screen will have different font size, need to be changed manually
        "terminal.integrated.fontFamily",
        // "clangd.onConfigChanged" // If version of clangd over 12, it can reload config automatically
    ],

    /* editor settings */
    // Font settings
    "editor.fontFamily": "'JetBrains Mono', 'Noto Sans CJK SC'",
    "editor.fontSize": 20,
    "editor.fontLigatures": true,
    "editor.rulers": [ 120 ],
    "editor.tabSize": 4,
    "editor.guides.bracketPairs": "active", // Display bracket pairs
    "editor.suggest.insertMode": "replace", // Replace text when accepting suggestion
    "editor.acceptSuggestionOnEnter": "off", // Tab completion without enter

    // Detailed settings about current theme
    "editor.tokenColorCustomizations": {
        "comments": {
            "fontStyle": "italic" // Italic comments, but one dark pro has already set this
        }
    },

    // Format settings
    "editor.formatOnSave": true,
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[xml]": {
        "editor.defaultFormatter": "redhat.vscode-xml"
    },

    /* Explorer settings */
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.confirmPasteNative": false,
    "explorer.compactFolders": false,

    /* Files settings */
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    /* Workbench settings */
    "workbench.colorTheme": "Default Dark Modern",
    "workbench.iconTheme": "vscode-icons",
    // Tree
    "workbench.tree.indent": 16,

    /* Integrated terminal settings */
    "terminal.integrated.fontFamily": "'Cascadia Code NF', 'Noto Sans CJK SC'",
    "terminal.integrated.fontSize": 20,
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.defaultProfile.linux": "bash",

    /* Romote settings */
    "remote.autoForwardPorts": true,
    "remote.autoForwardPortsSource": "process",

    /* Git settings */
    "git.openRepositoryInParentFolders": "never",
    "git.confirmSync": false,
    "git.autofetch": false,

    // /* Clangd settings */
    // "clangd.arguments": [
    //     "--background-index",
    //     "--completion-style=detailed",
    //     "--clang-tidy",
    //     "--header-insertion=never",
    //     "--compile-commands-dir=${workspaceFolder}/build"
    // ],

    /* YAML settings */
    "yaml.format.enable": true,
    "yaml.format.bracketSpacing": true,
    "yaml.format.printWidth": 120,

    /* XML settings */
    "xml.codeLens.enabled": true,
    "xml.format.maxLineWidth": 120,

    // extensions settings
    "extensions.ignoreRecommendations": true,
    "extensions.autoCheckUpdates": true,
    "extensions.autoUpdate": true,
    "extensions.closeExtensionDetailsOnViewChange": true,

    /* Json settings */
    "json.format.keepLines": true
}
