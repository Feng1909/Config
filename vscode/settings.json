{
    /* Sync settings */
    "settingsSync.ignoredSettings": [
        "editor.fontFamily",  // Font type
        "editor.fontSize",  // Font size
        "terminal.integrated.fontFamily",
        "http.proxy"
    ],

    /* Proxy settings */
    "http.proxy": "http://127.0.0.1:7890",

    /* editor settings */
    // Font settings
    "editor.fontFamily": "'Cascadia Mono', 'Noto Sans CJK SC'",
    "editor.fontSize": 20,
    "editor.rulers": [120],
    "editor.guides.bracketPairs": "active", // Display bracket pairs
    "editor.suggest.insertMode": "replace", // Replace text when accepting suggestion
    "editor.acceptSuggestionOnEnter": "off", // Tab completion without enter
    // Format
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",

    /* Explorer settings */
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.confirmPasteNative": false,
    "explorer.compactFolders": false,

    /* Files settings */
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": { // Do not display in explorer
        "**/.cache": true,
        "**/.catkin_tools": true,
    },

    /* Workbench settings */
    "workbench.colorTheme": "Default Dark Modern",
    "workbench.iconTheme": "vscode-icons",
    // Tree
    "workbench.tree.indent": 16,

    /* Integrated terminal settings */
    "terminal.integrated.fontFamily": "'Cascadia Mono NF', 'Noto Sans CJK SC'",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.lineHeight": 1,

    /* Romote settings */
    "remote.autoForwardPorts": true,
    "remote.autoForwardPortsSource": "process",

    /* Git settings */
    "git.openRepositoryInParentFolders": "always",
    "git.confirmSync": false,
    "git.autofetch": false,

    /* Clangd settings */
    "clangd.arguments": [
        "--background-index",
        "--completion-style=detailed",
        "--clang-tidy",
        "--header-insertion=never",
        "--compile-commands-dir=${workspaceFolder}/build"
    ],

    // extensions settings
    "extensions.ignoreRecommendations": true,
    "extensions.autoCheckUpdates": true,
    "extensions.autoUpdate": true,
    "extensions.closeExtensionDetailsOnViewChange": true,

    /* Help REDHAT */
    "redhat.telemetry.enabled": true,

    /* Json settings */
    "json.format.keepLines": true
}
