{
    /* editor settings */
    // Font settings
    "editor.fontFamily": "'JetBrains Mono', 'HONOR Sans CN'",
    "editor.fontSize": 16,
    "editor.fontLigatures": true,
    "editor.rulers": [ 120 ],
    "editor.tabSize": 4,
    "editor.guides.bracketPairs": "active", // Display bracket pairs
    "editor.suggest.insertMode": "replace", // Replace text when accepting suggestion
    "editor.acceptSuggestionOnEnter": "off", // Tab completion without enter
    // More editor settings
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.defaultColorDecorators": true,
    "editor.experimentalInlineEdit.enabled": true,
    "editor.inlayHints.padding": true,
    "editor.inlineCompletionsAccessibilityVerbose": true,
    "editor.linkedEditing": true,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,

    // Italicize comments(Default Dark Modern has not set.)
    "editor.tokenColorCustomizations": {
        "comments": {
            "fontStyle": "italic"
        }
    },

    // Format settings
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",

    /* Explorer settings */
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.confirmPasteNative": false,
    "explorer.compactFolders": false,

    /* Files settings */
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        "*.h": "cpp",
        "*.hpp": "cpp",
        "*.cc": "cpp",
        "*.cpp": "cpp"
    },

    // Search settings
    "search.exclude": {
        "**/.cache": true,
        "**/.git": true,
        "**/.idea": true,
        "**/.vscode": true,
        "**/build": true,
        "**/devel": true
    },

    // workbench settings
    "workbench.colorTheme": "Default Dark Modern",
    "workbench.iconTheme": "material-icon-theme",
    // Tree
    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "onHover",

    /* Integrated terminal settings */
    "terminal.integrated.fontFamily": "'Cascadia Code NF', 'HONOR Sans CN'",
    "terminal.integrated.fontSize": 16,

    // extensions settings
    "extensions.closeExtensionDetailsOnViewChange": true,
    "extensions.ignoreRecommendations": true,

    /* Clangd settings */
    "clangd.enableCodeCompletion": true,
    "clangd.arguments": [
        "--all-scopes-completion",
        "--background-index",
        "--clang-tidy",
        "--header-insertion=never"
    ],

    /* Git settings */
    "git.openRepositoryInParentFolders": "never",
    "git.confirmSync": false,
    "git.autofetch": false,

    /* TODO settings */
    "todohighlight.keywords": [
        {
            "text": "UPDATE",
            "color": "#000000",
            "backgroundColor": "yellow",
            "overviewRulerColor": "grey"
        }
    ],

    /* Codegeex */
    "Codegeex.Privacy": true,
    "Codegeex.Chat.fontSize": 12,
    "Codegeex.CompletionDelay": 1,
    "Codegeex.CommitMessageStyle": "ConventionalCommits",
    "Codegeex.OnlyKeyControl": true,
    "Codegeex.RepoIndex": true
}
